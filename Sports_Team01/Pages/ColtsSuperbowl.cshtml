@page
@model Sports_Team01.Pages.ColtsSuperbowlModel
@{
    ViewData["Title"] = "ColtsSuperbowl";
}

    <body style="background-color: #002C5F">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Colts"><img src="~/images/Logos/Colts_Logo_Transparent.png" height="150" width="150" /> </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="btn btn-colts" asp-area="" asp-page="/ColtsLive">Live</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-colts" asp-area="" asp-page="/ColtsArchive">Archive</a>
                            </li>
                            <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                                <ul class="navbar-nav ml-auto">
                                    <li class="nav-item">
                                        <a class="nav-link" href="https://www.facebook.com/colts/">
                                            <img src="~/images/Social Media/Facebook_Logo_Transparent.png" width="50" height="50" />
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="https://www.instagram.com/colts/?hl=en">
                                            <img src="~/images/Social Media/Instagram_Logo_Transparent.png" width="50" height="50" />
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="https://twitter.com/Colts?ref_src=twsrc%5Egoogle%7Ctwcamp%5Eserp%7Ctwgr%5Eauthor">
                                            <img src="~/images/Social Media/Twitter_Logo_Transparent.png" width="50" height="50" />
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="https://shop.colts.com/">

                                            <img src="~/images/Social Media/Colts_Shop_Transparent.png" />
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <h1 style="color:white">2007 Superbowl Colts vs Bears</h1>
        <iframe width="1280" height="720" src="//ok.ru/videoembed/1383805684260" frameborder="0" allow="autoplay" allowfullscreen></iframe>



        <!--testing base chat-->
        <div class="container">
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-2" ><label style="color:white">User</label></div>
                <div class="col-4"><input type="text" id="userInput" /></div>
            </div>
            <div class="row">
                <div class="col-2"><label style="color:white">Message</label></div>
                <div class="col-4"><input type="text" id="messageInput" /></div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-6">
                    <input class="btn-colts" type="button" id="sendButton" value="Send Message" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <ul style="color:white" id="messagesList"></ul>
            </div>
        </div>
        <script src="~/js/signalr/dist/browser/signalr.js"></script>
        <script src="~/js/chat.js"></script>
    </body>
