@page
@model Sports_Team01.Pages.ProModel
@{
    ViewData["Title"] = "Pro";
}

<body style="background-color:black">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 h-100" src="~/images/Banners/ProBanner.png" alt="First slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    
    <div style="color: white;">
        <div class="row">
            <h2 style="text-decoration:underline; ">Pro - $35.99/Month</h2>
        </div>
        <div class="row">
            <ul>
                <li>
                    <h6>Access to all live events from the Colts, Pacers, and IMS.</h6>
                </li>
            </ul>
        </div>
        <div class="row">
            <ul>
                <li>
                    <h6>Hours of archived memorable team moments and games/races.</h6>
                </li>
            </ul>
        </div>
        <div class="row">
            <ul>
                <li>
                    <h6>Select footage of your team's practices.</h6>
                </li>
            </ul>
        </div>
        <div class="row">
            <ul>
                <li>
                    <h6>Pre and Post game/race coverage including interviews and analysis.</h6>
                </li>
            </ul>
        </div>
        <div class="row">
            <ul>
                <li>
                    <h6>Entrance into monthly chance to win a zoom call with your favorite player/racer.</h6>
                </li>
            </ul>
        </div>
        <div class="row">
            <ul>
                <li>
                    <h6>Recieve exclusive Indy Sports Net merch at time of sign up and during monthly giveaways.</h6>
                </li>
            </ul>
        </div>
    </div>
    <a class="btn btn-block" asp-area="" asp-page="SignUp">Sign Up</a>
</body>
<script>
    $('.carousel').carousel({
        interval: 1500
    });
</script>