@page "/"
@model Sports_Team01.Pages.HomeNotLoggedInModel
@{
    ViewData["Title"] = "Home";
}

<body style="background-color:black">

    <h1 style="color:white; text-align:center;">INDY SPORTS NET</h1>
    <div class="row" style="color:black">
        -
    </div>
    <div class="row" style="color:black">
        -
    </div>
    <div class="row">
        <div style="color:white; float:left; font:Verdana; font-weight:900; width:50%;">
            <div class="row">
                <h2 style="text-decoration:underline;">Basic - $19.99/Month</h2>
            </div>
            <div class="row">
                <ul>
                    <li>
                        <h6>Access to all live events from the Colts, Pacers, and IMS.</h6>
                    </li>
                </ul>
            </div>
            <div class="row">
                <ul>
                    <li>
                        <h6>Hours of archived memorable team moments and games/races.</h6>
                    </li>
                </ul>
            </div>
            <div class="row">
                <ul>
                    <li>
                        <h6>Entrance into monthly chance to watch select footage of your team's practices.</h6>
                    </li>
                </ul>
            </div>
        </div>
        <div>
        </div>
        <div style="color:white; float:right; font:Verdana; font-weight:900; width:50%;">
            <div class="row">
                <h2 style="text-decoration:underline;">Pro - $35.99/Month</h2>
            </div>
            <div class="row">
                <ul>
                    <li>
                        <h6>Access to all live events from the Colts, Pacers, and IMS.</h6>
                    </li>
                </ul>
            </div>
            <div class="row">
                <ul>
                    <li>
                        <h6>Hours of archived memorable team moments and games/races.</h6>
                    </li>
                </ul>
            </div>
            <div class="row">
                <ul>
                    <li>
                        <h6>Select footage of your team's practices.</h6>
                    </li>
                </ul>
            </div>
            <div class="row">
                <ul>
                    <li>
                        <h6>Pre and Post game/race coverage including interviews and analysis.</h6>
                    </li>
                </ul>
            </div>
            <div class="row">
                <ul>
                    <li>
                        <h6>Entrance into monthly chance to win a zoom call with your favorite player/racer.</h6>
                    </li>
                </ul>
            </div>
            <div class="row">
                <ul>
                    <li>
                        <h6>Recieve exclusive Indy Sports Net merch at time of sign up and during monthly giveaways.</h6>
                    </li>
                </ul>
            </div>

        </div>
    </div>
    <div class="row">
        <a class="btn btn-block" asp-area="" asp-page="SignUp">Sign Me Up!</a>
    </div>
    <div class="row" style="color:black">
        -
    </div>
    <div class="row" style="color:black">
        -
    </div>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 h-100" src="~/images/Banners/SubscriptionBanner.png" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 h-100" src="~/images/Banners/ProBanner.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 h-100" src="~/images/Banners/BasicBanner.png" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
</body>
<script>
    $('.carousel').carousel({
        interval: 1500
    });
</script>

