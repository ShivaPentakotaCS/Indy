@page
@model Sports_Team01.Pages.IMSModel
@{
    ViewData["Title"] = "IMS";
}
    <body style="background-color:darkgoldenrod">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/IMS"><img src="~/images/Logos/IMS_Logo_Transparent.png" height="150" width="225" /> </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="btn btn-IMS" asp-area="" asp-page="/IMSLive">Live</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-IMS" asp-area="" asp-page="/IMSArchive">Archive</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-IMS" href="https://www.indianapolismotorspeedway.com/news-multimedia/news">News</a>
                            </li>
                            <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                                <ul class="navbar-nav ml-auto">
                                    <li class="nav-item">
                                        <a class="nav-link" href="https://www.facebook.com/IndianapolisMotorSpeedway/">
                                            <img src="~/images/Social Media/Facebook_Logo_Transparent.png" width="50" height="50" />
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="https://www.instagram.com/indianapolismotorspeedway/?hl=en">
                                            <img src="~/images/Social Media/Instagram_Logo_Transparent.png" width="50" height="50" />
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="https://twitter.com/IMS?ref_src=twsrc%5Egoogle%7Ctwcamp%5Eserp%7Ctwgr%5Eauthor">
                                            <img src="~/images/Social Media/Twitter_Logo_Transparent.png" width="50" height="50" />
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="https://shop.ims.com/">
                                            <img src="~/images/Social Media/IMS_Shop_Transparent.png" width="200" height="50" />
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="text-center">

        </div>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 h-100" src="~/images/IMS/IMS_Pagota_Banner.png" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 h-100" src="~/images/IMS/IndyCars_Banner.png" alt="Second slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </body>
